<h4 class="ui center aligned medium icon header">
  <i class="circular pink coffee icon"></i>
  Say something
</h4>

<div class="container">
  <div class=" ui four column grid">
    <div class="one wide column"></div>
    <div class=" ten wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui feed">
          <% @messages.each do |message|%>
            <div class="event">
              <div class="content">
                <div class="summary">
                  <em><%= message.user.username%></em>: <%= message.body%>
                </div>
              </div>
            </div>
          <%end%>
          </div>
        </div>
        <div class="extra content">
          <form class="ui reply form">
            <div class="field">
              <div class="ui fluid icon input">
                  <input type="text" placeholder="Enter a message">
                <i class="bordered inverted pink edit icon"></i> 
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <div class="four wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui pink vertical menu">
            <a class="active item">
              Home
            </a>
            <a class="item">
              Messages
            </a>
            <a class="item">
              Friends
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="one wide column"></div>
  </div>
</div>